{
  "name": "zxb",
  "version": "1.0.0",
  "description": "Full-stack social media application",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"pnpm run dev:backend\" \"pnpm run dev:frontend\"",
    "dev:backend": "cd server && pnpm dev",
    "dev:frontend": "cd client && pnpm dev",
    "install:all": "pnpm install && cd server && pnpm install && cd ../client && pnpm install",
    "build": "vite build",
    "test": "cd server && pnpm test && cd ../client && pnpm test",
    "lint": "cd server && pnpm lint && cd ../client && pnpm lint",
    "format": "cd server && pnpm format && cd ../client && pnpm format",
    "prepare": "husky install",
    "auto-build": "powershell -File ./scripts/build.ps1"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "^17.0.0",
    "@commitlint/config-conventional": "^17.0.0",
    "@playwright/test": "^1.52.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.2.2",
    "husky": "^8.0.0",
    "lint-staged": "^13.0.0",
    "postcss": "^8.5.4",
    "tailwindcss": "^3.4.1",
    "vite-plugin-pwa": "^1.0.0"
  },
  "dependencies": {
    "@emoji-mart/data": "^1.2.1",
    "@emoji-mart/react": "^1.1.1",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@headlessui/react": "^2.2.4",
    "@heroicons/react": "^1.0.6",
    "@mui/material": "^7.1.0",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-tabs": "^1.1.12",
    "@react-email/components": "^0.0.41",
    "@sentry/tracing": "^7.0.0",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "@tinymce/tinymce-react": "^4.0.0",
    "@vitejs/plugin-react": "^4.5.0",
    "axios": "^1.9.0",
    "class-variance-authority": "^0.7.1",
    "cloudflare": "^4.3.0",
    "crypto-js": "^4.1.1",
    "emoji-mart": "^5.6.0",
    "express-validator": "^7.2.1",
    "framer-motion": "^12.12.2",
    "handlebars": "^4.7.8",
    "helmet": "^8.1.0",
    "lucide-react": "^0.511.0",
    "multer": "^1.4.5-lts.2",
    "nodemailer": "^7.0.3",
    "react-hot-toast": "^2.5.2",
    "react-i18next": "^15.5.2",
    "react-pull-to-refresh": "^2.0.1",
    "react-router-dom": "^7.6.1",
    "redis": "^5.0.1",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "speakeasy": "^2.0.0",
    "tailwind-merge": "^3.3.0",
    "vite": "^6.3.5",
    "zustand": "^5.0.5"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
